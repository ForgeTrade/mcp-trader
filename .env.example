# Binance API Credentials
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_BASE_URL=https://api.binance.com

# Traefik Configuration
# Email for Let's Encrypt notifications
ACME_EMAIL=admin@context8.markets

# Traefik Dashboard Basic Auth
# Username: admin
# Password: Generated secure password
# To generate new: docker run --rm httpd:alpine htpasswd -nb admin your_password
# IMPORTANT: Escape $ symbols as $$ in .env file for docker-compose
TRAEFIK_BASIC_AUTH=admin:$$apr1$$oh7s8Exg$$5By06ax6Ke6Mho6pi2w5T1

# Traefik Log Level (DEBUG, INFO, WARN, ERROR)
TRAEFIK_LOG_LEVEL=INFO

# Rust Logging
RUST_LOG=info

# GitHub Container Registry Configuration (for deployment)
# These credentials are needed on the server to pull pre-built images
# Create a Personal Access Token with 'read:packages' scope at:
# https://github.com/settings/tokens
GHCR_USERNAME=your-github-username
GHCR_PAT=your-github-personal-access-token

# Docker Image Tags (for version pinning)
# Use 'latest' for most recent build, or 'sha-<commit>' for specific version
# Example: BINANCE_IMAGE_TAG=sha-abc1234
BINANCE_IMAGE_TAG=latest
GATEWAY_IMAGE_TAG=latest
